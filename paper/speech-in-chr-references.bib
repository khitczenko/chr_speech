	number = {10},
	urldate = {2023-07-04},
	journal = {Psychological Medicine},
	author = {Becker, H. E. and Nieman, D. H. and Wiltink, S. and Dingemans, P. M. and Fliert, J. R. van de and Velthorst, E. and Haan, L. de and Amelsvoort, T. A. van and Linszen, D. H.},
