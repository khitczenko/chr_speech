	author = {Moberget, Torgeir and Ivry, Richard B.},
	month = sep,
	year = {2019},
	keywords = {Cerebellum, Corollary discharge, Internal model, Prediction, Psychosis, Schizophrenia},
	pages = {820--831},
	file = {Accepted Version:/Users/kasia/Zotero/storage/CHEV2HC4/Moberget and Ivry - 2019 - Prediction, Psychosis, and the Cerebellum.pdf:application/pdf},
}

