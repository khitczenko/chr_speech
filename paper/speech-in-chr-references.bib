	author = {Abramson, Arthur S. and Whalen, D. H.},
	month = jul,
	year = {2017},
	keywords = {Consonants, Duration, Stops, Voicing, VOT (Voice Onset Time)},
	pages = {75--86},
	file = {ScienceDirect Full Text PDF:/Users/kasia/Zotero/storage/Z2MYGQSU/Abramson and Whalen - 2017 - Voice Onset Time (VOT) at 50 Theoretical and prac.pdf:application/pdf;ScienceDirect Snapshot:/Users/kasia/Zotero/storage/FHAEKISQ/S0095447016301048.html:text/html},
